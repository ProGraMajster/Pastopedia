<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pastopedia.Pages.ReadPlayerPasta"
             >
    <ScrollView VerticalOptions="FillAndExpand" VerticalScrollBarVisibility="Always">
        <StackLayout>
            <Frame Margin="5" Padding="5">
                <HorizontalStackLayout>
                    <Label x:Name="lblFS" Text="Wielkość tekstu" Margin="10,0" VerticalOptions="Center" />
                    <Stepper x:Name="stepper" Minimum="5" Maximum="100" ValueChanged="stepper_ValueChanged"/>
                </HorizontalStackLayout>
            </Frame>
            
            <Label x:Name="lblContent" Margin="15" FontSize="Body"/>
        </StackLayout>
    </ScrollView>
</ContentPage>